<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:background="#011f"
    android:orientation="vertical">

    <TextView

        android:id="@+id/lblRepositoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksandbold"
        android:gravity="center_vertical"
        android:text="Nome Do Repositorio"
        android:textColor="@color/colorText1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="NÃ£o Possui Pull Requests"
        app:layout_constraintEnd_toEndOf="@+id/lblRepositoryName"
        app:layout_constraintStart_toStartOf="@+id/lblRepositoryName"
        app:layout_constraintTop_toBottomOf="@+id/lblRepositoryName" />

    <ImageView
        android:layout_width="111dp"
        android:layout_height="69dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/owner"
        app:layout_constraintBottom_toTopOf="@+id/lblRepositoryName"
        app:layout_constraintEnd_toEndOf="@+id/lblRepositoryName"
        app:layout_constraintStart_toStartOf="@+id/lblRepositoryName" />

</androidx.constraintlayout.widget.ConstraintLayout>